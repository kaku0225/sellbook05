<h1>書籍列表</h1>


<%= flash[:notice] %>

<%= link_to '新增書籍' , new_book_path %>


<table>
    <tr>
      <td>name</td>
      <td>author</td>
    </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.name , book_path(book.id) %></td>
      <td><%= book.author %></td>
      <td><%= link_to '編輯' , edit_book_path(book.id) %></td>
      <td><%= link_to '刪除' , book_path(book.id), method: 'delete' %></td>
    </tr>
  <% end %>
</table>


<% if current_user %>
  <%= current_user.nickname %>
  <%= link_to '登出', logout_path, method:'delete' %>
<% else %>
  <%= link_to '註冊', registration_path %>
  <%= link_to '登入', session_path %>
<% end %>